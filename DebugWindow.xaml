<Window x:Class="UsbApp.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Window" Height="700" Width="650"
        Background="#333333" Foreground="#FFFFFF">
    <Grid>
        <StackPanel>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Name="TestSimulationButton" Content="Start Simulation" Click="TestSimulationButton_Click" Margin="5" Grid.Column="0" Background="#555555" Foreground="#FFFFFF"/>
                <Button Name="ClearTextButton" Content="Clear Text" Click="ClearTextButton_Click" Margin="5" Grid.Column="2" Background="#555555" Foreground="#FFFFFF"/>
                <Button Name="SaveLogButton" Content="Save Log" Click="SaveLogButton_Click" Margin="5" Grid.Column="3" Background="#555555" Foreground="#FFFFFF"/>
            </Grid>
            <TextBox Name="DataTextBox" HorizontalAlignment="Center" Width="600" Height="600" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Background="#444444" Foreground="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>